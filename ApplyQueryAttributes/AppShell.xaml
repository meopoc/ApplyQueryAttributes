<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApplyQueryAttributes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ApplyQueryAttributes.Views"
    xmlns:localDetail="clr-namespace:ApplyQueryAttributes.Views.Flyout.DetailPages"
    Title="ApplyQueryAttributes">

    <ShellContent
        Title="LoadingPage"
        ContentTemplate="{DataTemplate local:LoadingPage}"
        FlyoutItemIsVisible="False"
        Route="LoadingPage"
        Shell.FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Page With FlyoutMenu-1"
        ContentTemplate="{DataTemplate localDetail:PageWithFlyoutMenu_1}"
        Route="PageWithFlyoutMenu_1" />

    <ShellContent
        Title="Page With FlyoutMenu-2"
        ContentTemplate="{DataTemplate localDetail:PageWithFlyoutMenu_2}"
        Route="PageWithFlyoutMenu_2" />

</Shell>
